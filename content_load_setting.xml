<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="yao.myapplication.LoadSetting"
    tools:showIn="@layout/activity_load_setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No.   Setting name               LED1      LED2"
        android:id="@+id/load_setting_name"
        android:layout_marginTop="101dp"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load setting"
        android:id="@+id/button_load"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="show here"
        android:textSize="18dp"
        android:id="@+id/textView_loaded_setting"
        android:layout_below="@+id/load_setting_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="show here"
        android:textSize="18dp"
        android:id="@+id/textView_LEDvalue_show"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignTop="@+id/textView_loaded_setting"
        android:layout_alignRight="@+id/load_setting_name"
        android:layout_alignEnd="@+id/load_setting_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_which_setting"
        android:hint="Set which No. setting?"
        android:textColor="@color/colorAccent"
        android:layout_alignBottom="@+id/button_load"
        android:layout_alignRight="@+id/load_setting_name"
        android:layout_alignEnd="@+id/load_setting_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:id="@+id/button_set"
        android:layout_below="@+id/editText_which_setting"
        android:layout_alignRight="@+id/editText_which_setting"
        android:layout_alignEnd="@+id/editText_which_setting" />

    Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to current setting"
        android:textAllCaps="false"

        android:id="@+id/button_back_in_load_setting"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />
    View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" 1

 2

 3

 4

 5"
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView_loaded_setting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" /><![CDATA[



















    Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/button_set_setting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />










]]>
</RelativeLayout>
